{
  "scripts": {
    "dev": "nodemon index.js",
    "start": "node index.js",

    "test": "cross-env NODE_ENV=testing jest --runInBand",
    "test:verbose": "cross-env NODE_ENV=testing jest --verbose --runInBand",
    "test:watch": "cross-env NODE_ENV=testing jest --watchAll --runInBand",
       
    "migrate": "knex migrate:latest",
    "rollback": "knex migrate:rollback",
    "seed": "knex seed:run",
    "reset-db": "npm run rollback && npm run migrate && npm run seed",

    "migrateh": "heroku run knex migrate:latest -a ecommerce-nodejs",
    "rollbackh": "heroku run knex migrate:rollback -a ecommerce-nodejs",
    "seedh": "heroku run knex seed:run -a ecommerce-nodejs",
    "reset-dbh": "npm run rollbackh && npm run migrateh && npm run seedh",
    "databaseh": "heroku pg:psql -a ecommerce-nodejs",
    
    "deploy": "git add . && git commit -m 'update' && git push heroku main"
  },
  "engines": {
    "node": "18.13.0"
  },
  "dependencies": {
    "cors": "2.8.5",
    "dotenv": "14.3.0",
    "express": "4.17.2",
    "helmet": "5.0.2",
    "knex": "1.0.1",
    "knex-cleaner": "1.3.1",
    "pg": "8.7.1",
    "stripe": "8.165.0",
    "jsonwebtoken": "^8.5.1",
    "bcryptjs": "^2.4.3"
  },
  "devDependencies": {
    "@types/jest": "27.4.0",
    "cross-env": "7.0.3",
    "eslint": "8.7.0",
    "jest": "27.4.7",
    "nodemon": "2.0.15",
    "supertest": "6.2.2"
  }
}
